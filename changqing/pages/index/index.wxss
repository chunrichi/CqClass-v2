/* changqing/pages/index/index.wxss */

page {
  padding: 0;
  margin: 0;
}

.header {
  height: 210rpx;
  width: 750rpx;
  overflow: hidden;
}

.header-image {
  position: relative;
  width: 750rpx;
  top: -60rpx;
}

.headerArea {
  position: absolute;
  top: 128rpx;
  left: 15px;
}

.imgPhoto {
  /* display: inline; *//* background-color: blue; */
  border-radius: 50%;
  width: 30px;
  height: 30px;
  box-shadow: 0.5px 0.5px 5px #888;
}

.schoolName {
  position: relative;
  top: -6px;
  display: inline-block;
  padding-left: 10px;
  letter-spacing: 2px;
  font-weight: bold;
  font-size: 140%;
  font-family: Segoe UI;
}

.headreShadow {
  position: fixed;
  top: 0px;
  height: 210rpx;
  width: 750rpx;
  background-color: white;
  /* 透明度 1不透明 */
  opacity: 0.7;
  /* 设置高斯模糊 */
  filter: blur(100px);
}

.class-message-box {
  margin: 15px;
  /* height: 140px; */
}

.class-message-title {
  margin: 0.3px;
}

.title-icon {
  width: 7.7px;
  height: 19.16px;
}

.title-text {
  margin-left: 4px;
  font-weight: bold;
  font-family: Segoe UI;
}

.class-messages {
  width: 100%;
}

.class-message {
  margin: 13px auto;
  box-shadow: -1px 1px 8px rgba(27, 27, 27, 0.336);
  width: 95%;
  background: white;
  border-radius: 15px;
}

/* 课表信息内 各个信息的样式 */

.class-message {
  /* 改用flex布局后 对message添加的样式 */
  display: flex;
  flex-direction: row;
}

.crouseTime {
  /* background: red; */
  display: flex;
  justify-content: center;
  align-items: center;
  width: 15%;
  height: 78px;
}

.crouse-box {
  /* background: yellow; */
  display: flex;
  flex-direction: column;
  width: 85%;
}

.line-box {
  /* 行 布局-- 针对 */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.crouseName {
  margin-top: 13px;
  margin-left: 14px;
}

.teacherName {
  margin: 13px 34px 0 auto;
  font-size: 9px;
}

.roomName {
  margin-top: 11px;
  margin-left: 20px;
  font-size: 9px;
  align-self: flex-start;
}

.roomIcon {
  margin-right: 5px;
  height: 7.25px;
  width: 7.25px;
}

.vaildWeek {
  margin-top: 11px;
  margin-left:45px;
  font-size: 9px;
}

