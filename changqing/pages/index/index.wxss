/* changqing/pages/index/index.wxss */

page {
  padding: 0;
  margin: 0;
}

.header {
  height: 210rpx;
  width: 750rpx;
  overflow: hidden;
}

.header-image {
  position: relative;
  width: 750rpx;
  top: -60rpx;
}

.headerArea {
  position: absolute;
  top: 128rpx;
  left: 15px;
}

.imgPhoto {
  /* display: inline; */
  background-color: blue;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  box-shadow: 0.5px 0.5px 5px #888;
}

.schoolName {
  position: relative;
  top: -6px;
  display: inline-block;
  padding-left: 10px;
  letter-spacing: 2px;
  font-weight: bold;
  font-size: 140%;
  font-family: Segoe UI;
}

.headreShadow {
  position: fixed;
  top: 0px;
  height: 210rpx;
  width: 750rpx;
  background-color: white;
  /* 透明度 1不透明 */
  opacity: 0.7;
  /* 设置高斯模糊 */
  filter: blur(100px);
}

.class-message-box {
  margin: 15px;
  /* height: 140px; */
}

.class-message-title {
  margin: 0.3px;
}

.title-icon {
  width: 7.7px;
  height: 19.16px;
}

.title-text {
  margin-left: 4px;
  font-weight: bold;
  font-family: Segoe UI;
}

.class-messages {
  width: 100%;
}

.class-message {
  margin: 13px auto;
  box-shadow: -1px 1px 8px rgba(27, 27, 27, 0.336);
  width: 95%;
  height: 78x;
  background: white;
  border-radius: 15px;
}

.crouseTime {
  position: relative;
  top: 26px;
  left: 26px;
}

.crouse-box {
  position: relative;
  top: -26px;
}

.crouseName {
  position: relative;
  top: 13px;
  left: 68px;
}

.roomName {
  position: relative;
  left: 79px;
  top: 26px;
  height: 28px;
  font-size: 9px;
}

.room-icon{
  position: relative;

  left: -6px;
