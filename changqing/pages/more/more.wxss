/* changqing/pages/more/more.wxss */

page {
  padding: 0;
  margin: 0;
}

.header {
  width: 750rpx;
  height: 134px;
  /* border-left: 750rpx solid #b6eb91; *//* border-top: 106px solid #b6eb91; *//* border-right: 0px solid blue; *//* border-bottom: 28px solid transparent; *//* 改用剪裁实现梯形 */
  clip-path: polygon(0 0, 0 100%, 100% 106px, 100% 0);
  overflow: hidden;
}

.header-image {
  width: 750rpx;
  /* 水平翻转 */
  transform: rotateY(180deg);
}

.student-message-box {
  position: relative;
  top: -70px;
  margin: 0 auto;
  /* background-color: red; */
  width: 80%;
}

.student-message {
  position: absolute;
  top: 10px;
  display: inline-block;
  color: white;
}

.student-name {
  font-weight: bold;
  font-size: 120%;
  letter-spacing: 3px;
}

.student-department {
  font-size: 60%;
  letter-spacing: 1px;
}

.wx-portrait {
  position: relative;
  margin: 0;
  padding: 0;
  left: calc(300rpx + 54px);
  width: 94px;
  height: 94px;
  border-radius: 50%;
  box-shadow: 2px 2px 6px #999;
  background-color: #b6eb91;
  /* border: 4px solid #7ae0ee; */
  color: white;
  line-height: 94px;
  font-size: 60%;
}

.userinfo-avatar {
  position: relative;
  left: calc(300rpx + 54px);
  width: 94px;
  height: 94px;
  border-radius: 50%;
  box-shadow: 2px 2px 6px #999;
}

.setting-box {
  position: relative;
  top: -70px;
  width: 88%;
  margin: 20px auto;
  border-radius: 10px;
  /* background-color: red; */
  box-shadow: 0 0 8px #999;
  /* 为setting属性的margin-top避免边距重叠 */
  border-top: 0.1px solid white;
  border-bottom: 0.1px solid white;
}

.setting {
  width: 80%;
  margin: 20px auto;
}

.setting-text {
  display: inline-block;
  font-size: 96%;
}

.setting-icon {
  position: absolute;
  margin-top: 1px;
  right: 10%;
  width: 20px;
  height: 20px;
}

.clear-box {
  position: relative;
  top: -70px;
  width: 88%;
  margin: 6px auto;
  box-shadow: 0 0 8px #999;
  border-radius: 10px;
  border-top: 0.1px solid white;
  border-bottom: 0.1px solid white;
}

.clear {
  width: 80%;
  margin: 17px auto;
}

.clear-text {
  display: inline-block;
  font-size: 96%;
  color: #f62424;
}

.clear-icon {
  position: absolute;
  right: 10%;
  width: 20px;
  height: 20px;
}
